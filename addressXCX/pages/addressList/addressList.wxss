.addr_list_view {
  height: 100%;
  width: 100%;
  margin-bottom: 100rpx;
  flex-direction: column;
}

.addr_column_view{
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-direction: column;
}

.addr_view {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.addr_name_desc_text {
  width: 25%;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.addr_text {
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.addr_text_long {
  margin-left: 40rpx;
  margin-top: 30rpx;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.addr_text_res {
  margin-left: 30rpx;
  margin-top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 700rpx;
}

.addr_event_view{
  width: 40%;
  margin-top: 10rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: row;
}

.default_text {
  color: #FF8C00;
}

.addr_event_select_view{
  width: 38%;
  margin-top: 10rpx;
  margin-left: 30rpx; 
  display: flex;
  flex-direction: row;
}

.addr_image {
  width: 50rpx;
  height: 50rpx;
}

.addr_select_image {
  margin-left: 20rpx;
}

.addr_event_text {
  margin-left: 20rpx;
}

.line{
  height: 0.1rpx;
  width: 100%;
  border-bottom:0.1rpx solid #c8c8c8;
  margin-top: 30rpx;
}

.add_addr_button {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
}